{% extends "site/layout.njk" %}

{% block head %}

    <title>{{ recipe.title }} - Foodfy</title>

{% endblock %}

{% block filter %}
    <div class="noFilter"></div>
{% endblock %}

{% block content %}

    <div class="description">
        <div class="show-gallery">
            <img src="{{ files[0].src }}" alt="{{ recipe.title }}">
            <div class="preview">
                {% for file in files %}
                    <img src="{{ file.src }}" alt="{{ recipe.title }}">
                {% endfor %}
            </div>
        </div>
        <h1>{{ recipe.title }}</h1>
        <p> por {{ recipe.chef }}</p>

        <div class="topic ingredients">
            <h2>Ingredientes</h2>
            <p class="hide" id="ingredients" >ESCONDER</p>
        </div>
        <div class="content" id="ingredients" >
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }};</li>
                {% endfor %}
            </ul>
        </div>

        <div class="topic preparation">
            <h2>Modo de preparo</h2>
            <p class="hide" id="preparation" >ESCONDER</p>
        </div>
        <div class="content" id="preparation" >
            <ol>
                {% for step in recipe.preparation %}
                    <li>{{ step }}</li>
                {% endfor %}
            </ol>
        </div>

        <div class="topic information">
            <h2>Informações adicionais</h2>
            <p class="hide" id="information" >ESCONDER</p>
        </div>
        <div class="content" id="information" >
            <p>{{ recipe.information }}</p>
        </div>
    </div>

{% endblock %}