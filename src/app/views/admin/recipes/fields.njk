    <div class="item">
        <div>Chef</div>
                <select name="chef_id">
                    {% if recipe.chef_id %}
                        <option selected value="{{ recipe.chef_id }}">{{ recipe.chef }}</option>
                    {% else %}
                        <option disabled selected >Selecione um chefe</option>
                    {% endif %}
                    {% for chef in chefs %}
                        <option value="{{ chef.id }}">{{ chef.name }}</option>
                    {% endfor %}
                </select>
    </div>

    <div class="item">
        <div>Título da receita</div>
            <div>
                <input type="text" name="title" value="{{ recipe.title }}">
            </div>
    </div>

    <div class="item">
        <div>Imagem da receita</div>
            <div>
                <input type="url" name="image" value="{{ recipe.image }}">
            </div>
    </div>

    <div class="item">
        <div>Ingredientes</div>
        <div id="ingredients"> 

        {% if recipe.ingredients == null %}
            <div class="ingredient">
                <input 
                    type="text" 
                    name="ingredients[]" 
                    value="" 
                    placeholder="Ingrediente">
                    <button type="button" class="material-icons">clear</button>
            </div>
        {% else %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]" 
                        value="{{ ingredient }}" 
                        placeholder="Ingrediente">
                    <button type="button" class="material-icons">clear</button>
                </div>
            {% endfor %}
        {% endif %}

        </div>
        <button type="button" class="add-ingredient">+ Adicionar novo ingrediente</button>
    </div>

    <div class="item">
        <div>Modo de preparo</div>
        <div id="preparation">

        {% if recipe.preparation == null %}
            <div class="preparation-step">
                <input 
                    type="text" 
                    name="preparation[]" 
                    value="" 
                    placeholder="Novo passo">
                <button type="button" class="material-icons">clear</button>
            </div>
        {% else %}
            {% for step in recipe.preparation %}
                <div class="preparation-step">
                    <input 
                        type="text" 
                        name="preparation[]" 
                        value="{{ step }}" 
                        placeholder="Novo passo">
                    <button type="button" class="material-icons">clear</button>
                </div>
            {% endfor %}
        {% endif %}

        </div>
        <button type="button" class="add-preparation-step">+ Adicionar novo passo</button>
    </div>

    <div class="item">
        <div>Informações adicionais</div>
            <div class="textarea_container">
                <textarea type="text" name="information">{{ recipe.information }}</textarea>
            </div>
    </div>