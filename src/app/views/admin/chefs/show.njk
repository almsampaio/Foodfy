{% extends "admin/layoutAdmin.njk" %}

{% block head %}

    <title>{{ recipe.title }} - Admin Foodfy</title>

{% endblock %}

{% block content %}

    <div class="management">
        <h1>Receita:</h1>
        <button><a href="/admin/recipes/{{ recipe.id }}/edit">Editar receita</a></button>
    </div>

    <div class="description">
        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
        <h1>{{ recipe.title }}</h1>
        <p>{{ recipe.author }}</p>

        <div class="topic ingredients">
            <h2>Ingredientes</h2>
        </div>
        <div class="content" id="ingredients" >
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li class="show">- {{ ingredient }};</li>
                {% endfor %}
            </ul>
        </div>

        <div class="topic preparation">
            <h2>Modo de preparo</h2>
        </div>
        <div class="content" id="preparation" >
            <ol>
                {% for step in recipe.preparation %}
                    <li class="show">- {{ step }};</li>
                {% endfor %}
            </ol>
        </div>

        <div class="topic information">
            <h2>Informações adicionais</h2>
        </div>
        <div class="content" id="information" >
            <p>{{ recipe.information }}</p>
        </div>
    </div>

{% endblock %}