{% extends "admin/layoutAdmin.njk" %}

{% block head %}

    <title>{{ chef.name }} - Admin Foodfy</title>

{% endblock %}

{% block content %}

    <div class="management">
        <h1>Chef: {{ chef.name }}</h1>
        <button><a href="/admin/chefs/{{ chef.id }}/edit">Editar perfil</a></button>
    </div>

    <div class="chef_description">
        <img src="{{ file.src }}" alt="{{ file.name }}">
        <h1>{{ chef.name }}</h1>
        {% if (chef.total_recipes != 1) %}
            <p>{{ chef.total_recipes }} receitas</p>
        {% else %}
            <p>{{ chef.total_recipes }} receita</p>
        {% endif %}
    </div>

    <h2>Receitas</h2>

    <section class="management">

        {% if (chef.total_recipes > 0) %}
            {% for recipe in recipes %}
                <div class="management" id="{{ recipe.id }}">
                    <img src="{{ recipe.src }}" alt="{{ recipe.title }}">
                    <div>
                        <h3>{{ recipe.title }}</h3>
                        <p>por {{ chef.name }}</p>
                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
        
    </section>

{% endblock %}